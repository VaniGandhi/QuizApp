<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quiz.quizapp1.QuizApp.QuizApp.Login_Activity"
    android:background="@drawable/background">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/logocb"
                android:id="@+id/logo"
               android:layout_gravity="center"
                android:layout_marginTop="40dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:background="@drawable/loginbg"

                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"


                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:background="@drawable/mobilesign"
                        android:layout_marginTop="40dp"
                        android:id="@+id/signinmobile"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"

                        />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/framelayout1"

                       >
                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/facebooklogin_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:visibility="gone"

                            />


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="58dp"
                            android:background="@drawable/facebooksign"
                            android:layout_marginTop="14dp"
                            android:id="@+id/facebooksignin"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:onClick="onClickFacebookButton"

                            />



                    </FrameLayout>



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:background="@drawable/googlesign"
                        android:layout_marginTop="14dp"
                        android:id="@+id/googlesignin"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="-20dp"

                        />

                </LinearLayout>
            </LinearLayout>



</RelativeLayout>